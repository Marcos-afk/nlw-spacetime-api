generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  login      String
  github_id  String
  avatar_url String?
  memories   Memory[]

  @@map("users")
}

model Memory {
  id         String   @id @default(uuid())
  cover_url  String
  content    String
  is_public  Boolean  @default(false)
  created_at DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id])

  @@map("memories")
}
